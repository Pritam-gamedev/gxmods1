{
    "manifest_version": 3,
    "name": "Grand Piano",
    "description": "Let the melody flow through your keystrokes.",
    "version": "1.0",
    "icons":
    {
        "512": "icon_512.png"
    },
    "developer":
    {
        "name": "Opera Software"
    },
    "mod":
    {
        "schema_version": 1,
        "payload":
        {
            "keyboard_sounds":
            {
                "TYPING_LETTER":
                [
                    "sounds/1.mp3",
                    "sounds/2.mp3",
                    "sounds/.mp3",
                    "sounds/4.mp3",
                    "sounds/5.mp3"
                ],
                "TYPING_ENTER":
                [
                    "sounds/6.mp3"
                ],
                "TYPING_SPACE":
                [
                    "sounds/7.mp3"
                ],
                "TYPING_BACKSPACE":
                [
                    "sounds/Grand_Piano_-_keyboard_effects-backspace.mp3"
                ]
            }
        }
    }
}
